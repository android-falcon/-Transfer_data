<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="start|center_vertical">

    <LinearLayout
        android:id="@+id/row"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="start|center_vertical"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/from"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:gravity="start"
            android:padding="4dp"
            android:text="from"
            android:textColor="@color/black"
            android:textSize="12sp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/to"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:gravity="start"
            android:text="to"
            android:textColor="@color/black"
            android:textSize="12sp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/itemname"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="2dp"
            android:gravity="center"
            android:text="@string/Itemname"
            android:textColor="@color/black"
            android:textSize="13sp"
            android:layout_marginStart="10dp"
            android:layout_marginVertical="5dp"

            />

        <TextView
            android:id="@+id/zone"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="2dp"
            android:gravity="center"
            android:text="zone"
            android:textColor="@color/black"
            android:textSize="13sp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/itemcode"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="2dp"
            android:gravity="center"
            android:text="@string/itemCode"
            android:textColor="@color/black"
            android:textSize="13sp" />

        <EditText
            android:id="@+id/tblqty"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="2dp"
            android:gravity="center"
            android:imeOptions="actionDone"
            android:inputType="number"
            android:maxLines="1"
            android:padding="2dp"
            android:selectAllOnFocus="true"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textFontWeight="10"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/itemqty"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="2dp"
            android:gravity="start"
            android:text="qty"
            android:textColor="@color/black"
            android:textSize="13sp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/trsnferNo"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="2dp"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/tvEdit"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginHorizontal="2dp"
            android:gravity="end"
            android:textSize="14sp"
            android:visibility="visible"
            app:drawableEndCompat="@drawable/ic_baseline_edit_24"
            app:drawableTint="@color/black" />

        <TextView
            android:id="@+id/tvRemove"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="2dp"
            android:gravity="end"
            android:textSize="14sp"
            android:visibility="visible"
            app:drawableEndCompat="@drawable/delete2"
            android:layout_marginEnd="10dp"
            />


    </LinearLayout>


    <LinearLayout
        android:id="@+id/linearEdit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvEditSerials"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

        <Button
            android:id="@+id/btnAddSerial"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:drawableStart="@drawable/ic_add"
            android:text="@string/add"
            android:textAllCaps="false" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/dark_blue_3"
        android:visibility="invisible" />

</LinearLayout>