    <LinearLayout
        android:id="@+id/labels"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginTop="1dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/postedLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginBottom="2dp"
            android:gravity="start"
            android:text="@string/posted_items"
            android:textSize="12sp"
            app:drawableStartCompat="@drawable/ic_square"
            app:layout_constraintBottom_toTopOf="@+id/notPostedLabel"
            app:layout_constraintStart_toStartOf="@+id/notPostedLabel"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/notPostedLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:gravity="start"
            android:text="@string/not_posted_items"
            android:textSize="12sp"
            app:drawableStartCompat="@drawable/ic_unposted_square" />
    </LinearLayout>

