<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    android:orientation="vertical"
    tools:context=".Login">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/my_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat"
        app:title="@string/Login"
        app:titleTextColor="@color/white"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="5"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView

                android:id="@+id/Version"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="    Ver 9"
                android:textAlignment="viewStart"
                android:textColor="@color/white"
                android:textSize="16dp"

                />

            <TextView
                android:id="@+id/setting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:drawableEndCompat="@drawable/ic_baseline_settings_24"
                app:drawableRightCompat="@drawable/ic_baseline_settings_24" />
        </LinearLayout>


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_marginTop="2dp"
        android:layout_weight="7.5"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginTop="2dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:gravity="center"
                android:text="@string/selectCompany"
                android:textColor="@color/white"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/companyName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:gravity="center"
                android:onClick="showCompanyDialog"
                app:srcCompat="@drawable/ic_keyboard_arrow_down2"
                tools:ignore="VectorDrawableCompat" />
            <!--                android:drawableStart="@drawable/ic_keyboard_arrow_down_black_24dp"-->

        </LinearLayout>


        <TextView
            android:id="@+id/selectedCompany"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/back_without_border"
            android:gravity="center|bottom"
            android:textColor="@color/dark_blue_3" />

    </LinearLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="62dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="62dp"
        android:layout_weight="7.5"
        android:background="@drawable/blue_border_rounded_cornwe">
        <!-- INPUT -->
        <EditText
            android:id="@+id/username_input"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="14dp"
            android:layout_toEndOf="@+id/username_icon"
            android:background="@android:color/transparent"
            android:hint="@string/user_name"
            android:inputType="text"
            android:maxLines="1"
            android:padding="2dp"
            android:textAlignment="viewStart"
            android:textCursorDrawable="@drawable/cursor_color"
            android:textSize="14sp" />
        <!-- ICON -->
        <ImageView
            android:id="@+id/username_icon"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="17dp"
            android:src="@drawable/ic_person2"


            />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="62dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="62dp"
        android:layout_weight="7.5"
        android:background="@drawable/blue_border_rounded_cornwe">
        <!-- INPUT -->
        <EditText
            android:id="@+id/pass"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="14dp"
            android:layout_toEndOf="@+id/icon"
            android:background="@android:color/transparent"
            android:hint="@string/password"
            android:inputType="textPassword"
            android:maxLength="10"
            android:maxLines="1"
            android:padding="2dp"
            android:textAlignment="viewStart"
            android:textCursorDrawable="@drawable/cursor_color"
            android:textSize="14sp" />
        <!-- ICON -->
        <ImageView
            android:id="@+id/icon"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="17dp"
            android:src="@drawable/ic_key2" />
    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="top|center"
        android:layout_marginTop="10dp"
        android:layout_weight="6"
        android:gravity="top|center"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/login"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_gravity="top|center"
            android:layout_margin="5dp"
            android:background="@drawable/loginbtn"
            android:gravity="center"
            android:padding="10dp"
            android:text="@string/Login"
            android:textColor="#ffffff"
            android:textSize="16sp"
            android:textStyle="bold" />


    </LinearLayout>


</LinearLayout>